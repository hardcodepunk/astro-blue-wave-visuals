---
const services = [
  {
    title: "Brand Content",
    subtitle: "Campaigns, launch films, product features.",
    href: "/services#brand-content",
    img: "/img/horizontal-1.jpg",
  },
  {
    title: "Lifestyle",
    subtitle: "Human stories, everyday authenticity.",
    href: "/services#lifestyle",
    img: "/img/horizontal-1.jpg",
  },
  {
    title: "Outdoor & Sports",
    subtitle: "Surf, trail, travel, action-driven stories.",
    href: "/services#outdoor-sports",
    img: "/img/horizontal-1.jpg",
  },
]
---

<section class="mx-auto max-w-6xl px-4 py-16">
  <h2 class="font-display text-3xl mb-8">Services</h2>
  <div class="grid gap-6 md:grid-cols-3">
    {
      services.map(s => (
        <a href={s.href} class="group relative block overflow-hidden rounded-xl">
          <img src={s.img} alt={s.title} class="h-64 w-full object-cover transition group-hover:scale-105" />
          <div class="absolute inset-0 bg-black/30 group-hover:bg-black/40 transition" />
          <div class="absolute inset-x-0 bottom-0 p-4">
            <h3 class="text-white text-xl font-semibold">{s.title}</h3>
            <p class="text-white/80 text-sm">{s.subtitle}</p>
          </div>
        </a>
      ))
    }
  </div>
</section>
