---
const items = [
  { title: "Brand Film — Shoreline Coffee", href: "/portfolio" },
  { title: "Outdoor — Sri Lanka Surf", href: "/portfolio" },
  { title: "Lifestyle — Morning Ride", href: "/portfolio" },
  { title: "Brand — Trail Apparel", href: "/portfolio" },
  { title: "Outdoor — Coastal Run", href: "/portfolio" },
  { title: "Lifestyle — Studio Session", href: "/portfolio" },
]

// one shared image in /public/img
const IMG_SRC = "/img/horizontal-2.jpg" // 1600x1200 recommended
const WIDTH = 1600
const HEIGHT = 1200
---

<section class="mx-auto max-w-6xl px-4 py-16">
  <div class="flex items-end justify-between">
    <h2 class="font-display text-3xl">Featured Work</h2>
    <a href="/portfolio" class="text-sm underline underline-offset-4">View all</a>
  </div>

  <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {
      items.map(p => (
        <a href={p.href} class="group block">
          <div class="overflow-hidden rounded-xl">
            <img
              src={IMG_SRC}
              width={WIDTH}
              height={HEIGHT}
              alt={p.title}
              loading="lazy"
              decoding="async"
              class="aspect-[4/3] w-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
          </div>
          <div class="mt-3">
            <h3 class="text-lg font-semibold">{p.title}</h3>
          </div>
        </a>
      ))
    }
  </div>
</section>
